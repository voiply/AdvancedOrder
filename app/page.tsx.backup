// Base path from next.config.ts - must match the mount path in Webflow Cloud
const basePath = '/home-phone-checkout';

// Types
interface AddressComponents {
  street: string;
  street2?: string;
  city: string;
  state: string;
  zipCode: string;
}

interface Bundle {
  id: string;
  name: string;
  price: number;
  originalPrice: number;
  features: string[];
  image: string;
}

const BUNDLES: Bundle[] = [
  {
